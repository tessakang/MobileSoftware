<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature_haru"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="하루필름"
                android:textSize="30dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="150dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="배경색"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:layout_editor_absoluteX="164dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Special Frame"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="110dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="25dp"
                android:text="# 네컷사진관의 근본"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="# 어딜 가든 있음!"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:text="👍🏻 높은 접근성\n👍🏻 적당한 보정\n👍🏻 어플로 내 맘대로 프레임 설정 가능"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="99dp"
                android:layout_height="135dp"
                android:layout_marginEnd="10dp"
                android:src="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />


            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="99dp"
                android:layout_height="135dp"
                android:layout_marginTop="10dp"
                android:src="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                tools:layout_editor_absoluteX="100dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="99dp"
                android:layout_height="135dp"
                android:layout_marginStart="10dp"
                android:src="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageView12"
                app:layout_constraintTop_toTopOf="@+id/imageView12" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="99dp"
                android:layout_height="135dp"
                android:layout_marginTop="20dp"
                android:src="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                tools:layout_editor_absoluteX="156dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="99dp"
                android:layout_height="135dp"
                android:layout_marginStart="10dp"
                android:src="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />


            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="12dp"
                android:src="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:layout_editor_absoluteX="95dp" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView14">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/black" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="special frame 명"
                android:textSize="22dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="colab with"
                android:textSize="19dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="2023.11.17~"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                tools:layout_editor_absoluteX="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>